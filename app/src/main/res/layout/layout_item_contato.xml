<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <ImageView
        android:id="@+id/imagem_contato"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_spotify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/titulo_layout_item_contato"
        style="@style/Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nome_do_contato"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/imagem_contato"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/imagem_contato"
        app:layout_constraintBottom_toTopOf="@+id/subtitulo_layout_item_contato"/>
    <TextView
        android:id="@+id/subtitulo_layout_item_contato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/descricao_do_contato"
        style="@style/Subtitle"
        app:layout_constraintStart_toEndOf="@+id/imagem_contato"
        app:layout_constraintBottom_toBottomOf="@+id/imagem_contato"
        app:layout_constraintTop_toBottomOf="@+id/titulo_layout_item_contato"/>

</androidx.constraintlayout.widget.ConstraintLayout>