<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/titulo_textoLancamento_itempagamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/texto_titulo_item_transaction"
        app:layout_constraintBottom_toTopOf="@+id/titulo_texto_tipoLancamento_itempagamento"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end_itempagamento"
        app:layout_constraintStart_toEndOf="@+id/imagemLancamento_itempagamento"
        app:layout_constraintTop_toTopOf="@+id/imagemLancamento_itempagamento"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <ImageView
        android:id="@+id/imagemLancamento_itempagamento"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/titulo_texto_tipoLancamento_itempagamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/texto_subtitulo_item_transaction"
        app:layout_constraintBottom_toBottomOf="@+id/imagemLancamento_itempagamento"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end_itempagamento"
        app:layout_constraintStart_toEndOf="@+id/imagemLancamento_itempagamento"
        app:layout_constraintTop_toBottomOf="@+id/titulo_textoLancamento_itempagamento" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_end_itempagamento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>